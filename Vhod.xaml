<Window x:Class="PolZhelnov.Vhod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация — Поликлиника" 
        Height="650" 
        Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        ResizeMode="NoResize">

    <Grid Margin="40,10,40,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,35">
            <Ellipse Width="80" Height="80" Fill="#007BFF" HorizontalAlignment="Center" Margin="0,0,0,20">
                <Ellipse.Effect>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="4" Color="#007BFF" Opacity="0.4"/>
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock Text="Поликлиника"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#212529"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Вход в систему"
                       FontSize="16"
                       Foreground="#6C757D"
                       HorizontalAlignment="Center"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <Border Grid.Row="1"
        Background="White"
        CornerRadius="12"
        Padding="35"
        BorderBrush="#E0E0E0"
        BorderThickness="1"
        MaxWidth="400"
        HorizontalAlignment="Center"
        VerticalAlignment="Center" Height="346">

            <StackPanel>
                <TextBlock Text="Логин" 
                           Foreground="#495057"
                           FontWeight="Medium"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="textBox_login"
                         Padding="12,10"
                         FontSize="15"
                         BorderBrush="#CED4DA"
                         BorderThickness="1"
                         Background="White"
                         Margin="0,0,0,24"/>

                <TextBlock Text="Пароль" 
                           Foreground="#495057"
                           FontWeight="Medium"
                           FontSize="14"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="passwordBox_password"
                             Padding="12,10"
                             FontSize="15"
                             BorderBrush="#CED4DA"
                             BorderThickness="1"
                             Background="White"
                             Margin="0,0,0,32"/>

                <Button x:Name="LoginButton"
                        Content="Войти"
                        Click="Avtorizatiya"
                        Background="#007BFF"
                        Foreground="White"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Height="50"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="8"
                                                Padding="20,10">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0069D9"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>