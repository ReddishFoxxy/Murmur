<Window x:Class="PolZhelnov.Vrachi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Врачи — Поликлиника" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Управление врачами"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#2C3E50"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="15"
                    Margin="0,0,10,0"
                    BorderBrush="#CED4DA" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Список врачей"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Foreground="#495057"
                               Margin="0,0,0,15"/>

                    <ListBox x:Name="SpisokDoc"
                             Grid.Row="1"
                             SelectionChanged="SpisokDoc_SelectionChanged"
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="14">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,8" 
                                        Background="White" 
                                        Margin="0,0,0,6" 
                                        CornerRadius="4"
                                        BorderBrush="#E9ECEF" 
                                        BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="{Binding FIODoc}" FontWeight="Bold" Foreground="#212529"/>
                                        <TextBlock Text="{Binding kodSpec}" Foreground="#495057"/>
                                        <TextBlock Text="{Binding Kabinet, StringFormat='Кабинет: {0}'}" Foreground="#6C757D"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="25"
                    Margin="10,0,0,0"
                    BorderBrush="#CED4DA" 
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Данные врача"
                               FontWeight="SemiBold"
                               FontSize="18"
                               Foreground="#495057"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="ФИО врача" Foreground="#495057" Margin="0,0,0,4"/>
                    <TextBox x:Name="BoxFIO"
                             Padding="8,6"
                             FontSize="14"
                             Margin="0,0,0,16"
                             Background="White"
                             BorderBrush="#DEE2E6"/>

                    <TextBlock Text="Специальность" Foreground="#495057" Margin="0,0,0,4"/>
                    <TextBox x:Name="BoxSpec"
                             Padding="8,6"
                             FontSize="14"
                             Margin="0,0,0,16"
                             Background="White"
                             BorderBrush="#DEE2E6"/>

                    <TextBlock Text="Дата рождения" Foreground="#495057" Margin="0,0,0,4"/>
                    <TextBox x:Name="BoxBirth"
                             Padding="8,6"
                             FontSize="14"
                             Margin="0,0,0,16"
                             Background="White"
                             BorderBrush="#DEE2E6"
                             Text="дд.мм.гггг"/>

                    <TextBlock Text="Телефон" Foreground="#495057" Margin="0,0,0,4"/>
                    <TextBox x:Name="BoxPhone"
                             Padding="8,6"
                             FontSize="14"
                             Margin="0,0,0,16"
                             Background="White"
                             BorderBrush="#DEE2E6"/>

                    <TextBlock Text="Кабинет" Foreground="#495057" Margin="0,0,0,4"/>
                    <TextBox x:Name="BoxKab"
                             Padding="8,6"
                             FontSize="14"
                             Margin="0,0,0,24"
                             Background="White"
                             BorderBrush="#DEE2E6"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Name="Save" Click="Save_Click"
                                Content="Сохранить" Width="110" Height="36"
                                Background="#28A745" Foreground="White" FontSize="14" FontWeight="SemiBold"
                                Margin="0,0,12,0" Cursor="Hand" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="12,6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#218838"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Name="Clear" Click="Clear_Click"
                                Content="Очистить" Width="110" Height="36"
                                Background="#FFC107" Foreground="Black" FontSize="14" FontWeight="SemiBold"
                                Margin="0,0,12,0" Cursor="Hand" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="12,6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E0A800"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Name="Delete" Click="Delete_Click"
                                Content="Удалить" Width="110" Height="36"
                                Background="#DC3545" Foreground="White" FontSize="14" FontWeight="SemiBold"
                                Cursor="Hand" BorderThickness="0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="12,6">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C82333"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>